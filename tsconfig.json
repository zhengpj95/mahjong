{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "noEmitHelpers": true,
    "sourceMap": true,
    "strict": false,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@base/*": [
        "src/base/*"
      ],
      "@def/*": [
        "src/def/*"
      ],
      "@ui/*": [
        "src/ui/*"
      ],
      "@script/*": [
        "src/script/*"
      ],
      "@platform/*": [
        "src/platform/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}