{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "strict": true,
    "strictNullChecks": false,
    "noEmitHelpers": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "paths": {
      "@base/*": [
        "src/base/*"
      ],
      "@def/*": [
        "src/def/*"
      ],
      "@script/*": [
        "src/script/*"
      ],
      "@platform/*": [
        "src/platform/*"
      ],
      "@config/*": [
        "src/3rd/*"
      ],
      "~/packages/*": [
        "./library/packages/*"
      ],
      "@3rd-types/*": [
        "src/3rd-types/*"
      ]
    },
    "types": [
      "minigame-api-typings",
      "node"
    ]
  },
  "include": [
    "./assets",
    "./src",
    "./engine"
  ]
}